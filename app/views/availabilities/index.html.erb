<h3 class="text-center">Availability dates and times</h3>

<br>
<div class="d-flex justify-content-center text-center">
  <div class="cards">
    <% @availabilities.where(scheduled: false).each do |availability|  %>
      <div class="card" style="width: 15rem;">
        <div class="card-body">
          <h5 class="card-title"><%= availability.date.strftime("%a, %B %d %Y") %></h5>
          <p class="card-text"><%= availability.time.strftime('%k:%M') %></p>
          <p class="card-text">20 minutes long</p>
          <p class="card-text"><%= link_to "Details", availability_path(availability) %></p>
          <p class="card-text"><%= link_to "Delete", availability_path(availability), method: :delete  %></p>
          <p><%= link_to "Set-up Meeting", { action: 'new', controller: 'meetings', availability_id: availability }, class: "a-card"  %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

