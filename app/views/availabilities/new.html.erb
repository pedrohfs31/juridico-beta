
<h3 class="text-center mt-2">New Availability</h3>

<div class="main">
    <div class="w-50 mx-auto py-3 px-4 border">
      <div class="d-flex justify-content-center text-center">
        <div class="form" style="width: 100%;">
          <%= simple_form_for @availability do |f| %>
            <%= f.input :date, start_year: Date.today.year,
                              end_year: Date.today.year + 1,
                              order: [:day, :month, :year] %>
            <%= f.input :time, as: :select, collection: @times.values %>
            <%= f.button :submit, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
 </div>
</div>
<div class="form-complement-new-availability">
  <%= link_to "Back", :back %>
</div>
