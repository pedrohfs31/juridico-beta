
<div class="d-flex justify-content-center text-center">
  <div class="cards">
    <% @meetings.each do |meeting|  %>
      <div class="card" style="width: 15rem;">
        <div class="card-body">
          <h6 class="card-title"><strong><%= meeting.availability.date.strftime("%A, %d %b %Y") %></strong></h6>
          <p> Subject: <%= meeting.subject %> </p>
          <p class="card-text"><%= meeting.availability.time.strftime('%k:%M %P') %></p>
          <p class="card-text">20 minutes long</p>
          <ul class="icons-inline">
            <li class="text-center">
              <%= link_to(meeting_path(meeting)) do %>
                <i class="fas fa-info-circle"></i>
              <% end %>
            </li>
            <li>
              <%= link_to meeting_path(meeting), method: :delete, data: { confirm: 'Are you sure?' }, class: 'user' do %>
                 <i class="fa fa-trash-alt"></i>
              <% end %>
            </li>
          </ul>
          <!-- <p><%#= link_to "Set-up Meeting", { action: 'new', controller: 'meetings', availability_id: availability }, class: "a-card"  %></p> -->
        </div>
      </div>
    <% end %>
  </div>
</div>

